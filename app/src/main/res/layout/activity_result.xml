<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_result"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.dervis.hangman.ResultActivity">

    <TextView
        android:id="@+id/win_loss_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/correct_word"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/win_loss_textview"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/tries_left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/correct_word"
        android:textColor="#000000"/>

    <Button
        android:id="@+id/back_to_main"
        android:text="@string/tillbaka_till_huvudmenyn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:background="@drawable/button"
        android:textColor="#ffffff"
        android:onClick="back_to_main"
        android:textSize="20sp"
        android:layout_alignParentBottom="true" />

    <ImageView
        android:id="@+id/result_hanged"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/resulthanged"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tries_left"
        android:layout_marginTop="13dp" />

</RelativeLayout>
